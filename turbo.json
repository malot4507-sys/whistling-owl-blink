{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    }
  },
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": [
    "NEXT_TELEMETRY_DISABLED",
    "TURBOPACK_TELEMETRY_DISABLED",
    "NODE_OPTIONS"
  ]
}
